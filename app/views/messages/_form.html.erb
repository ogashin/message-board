<%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class='row'>
    <div class='col-md-6'>
  <div class='form-group'>
  <%= f.label :name, '名前:' ,class: 'control-label col-md-2' %>
  <div class='col-md-10'><%= f.text_field :name, class: 'form-control' %></div>
  </div>
 </div>
    <div class='col-md-6'>
  <div class='form-group'>
  <%= f.label :body, '内容:' ,class: 'control-label col-md-2' %>
  <div class='col-md-10'><%= f.text_area :body, class: 'form-control' %></div>
  </div>
  </div>
 </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>